<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Blueforcetracker</name>
    <author>Gabriel Bourque</author>
    <version>1.0.0</version>
    <description>Carte des points d'intérêts.</description>
    <files>
        <filename>mod_blue_force_tracker.xml</filename>
        <filename module="mod_blue_force_tracker">mod_blue_force_tracker.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/gateway.php</filename>
        <filename>tmpl/userService.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/js/blueforcetracker.js</filename>
        <filename>tmpl/js/croppie.js</filename>
        <filename>tmpl/js/customMapControl.js</filename>
        <filename>tmpl/js/mapbox-gl.js</filename>
        <filename>tmpl/js/ui.js</filename>
        <filename>tmpl/css/blueforcetracker.css</filename>
        <filename>tmpl/css/bootstrap.min.css</filename>
        <filename>tmpl/css/croppie.css</filename>
        <filename>tmpl/css/mapbox-gl.css</filename>
        <filename>tmpl/assets/marker.png</filename>
        <filename>updates/blueforcetracker_update.xml</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="height"
                        type="number"
                        default="500"
                        filter="integer"
                        label="Map height"/>
                <field
                        name="width"
                        type="number"
                        default="500"
                        filter="integer"
                        label="Map width"/>
            </fieldset>
        </fields>
    </config>
    <updateservers>
	    <server type="extension" name="Blueforcetracker" priority="1">https://raw.githubusercontent.com/akheron98/mod_blue_force_tracker/master/updates/blueforcetracker_update.xml</server>
    </updateservers>
</extension>

